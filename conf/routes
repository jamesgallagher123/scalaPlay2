# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index

GET         /items               controllers.Application.listItems
POST        /items               controllers.Application.createItem

GET         /deleteItem          controllers.Application.loadDeleteItem(id: Int ?= 0)
POST        /deleteItem          controllers.Application.deleteItem(id: Int)

# image upload test
GET         /uploadImage         controllers.Application.viewUpload
POST        /uploadImage         controllers.Application.upload

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)